{
  "env": {
    "jest": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore",
        "imports": "always-multiline",
        "objects": "always-multiline"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["tests/**", "*.test.js"] }
    ],
    "max-len": ["error", 70]
  }
}
