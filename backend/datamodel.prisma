enum Gender {
  FEMALE
  MALE
  OTHER
}

enum Permission {
  ADMIN
  PRO_USER
  USER
}

enum Unit {
  CUP
  G
  KG
  L
  LB
  MG
  ML
  PT
  TBSP
  TSP
}

type Food {
  id: ID! @unique
  brand: String!
  calories: Float!
  carb: Float!
  ean: String
  fat: Float!
  fatMonounsaturated: Float
  fatPolyunsaturated: Float
  fatSaturated: Float
  fatTrans: Float
  fibre: Float
  name: String!
  polyol: Float
  protein: Float!
  servingSize: Int!
  servingUnit: Unit!
  sugar: Float
  user: User! @relation(name: "UserFood")
  createdAt: DateTime!
  updatedAt: DateTime!
  verifiedAt: DateTime
}

type FoodItem {
  id: ID! @unique
  calories: Float!
  carb: Float!
  fat: Float!
  fatMonounsaturated: Float
  fatPolyunsaturated: Float
  fatSaturated: Float
  fatTrans: Float
  fibre: Float
  food: Food!
  polyol: Float
  protein: Float!
  servingSize: Float!
  servingUnit: Unit!
  sugar: Float
  user: User!
}

type Goal {
  id: ID! @unique
  calories: Float!
  carb: Float!
  fat: Float!
  protein: Float!
  user: User!
  weight: Float!
}

type Profile {
  id: ID! @unique
  dateOfBirth: DateTime
  gender: Gender
  height: Int
  location: String
  name: String
  photo: String
  timezone: String
  user: User! @relation(name: "UserProfile")
}

type User {
  id: ID! @unique
  diary: [FoodItem]!
  email: String! @unique
  foods: [Food]! @relation(name: "UserFood")
  password: String!
  pendingEmail: String
  permissions: [Permission]!
  profile: Profile @relation(name: "UserProfile")
  token: String
  tokenExpiry: Float
  weightLogs: [WeightLog]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type WeightLog {
  id: ID! @unique
  date: DateTime!
  image: String
  user: User!
  weight: Float!
  createdAt: DateTime!
  updatedAt: DateTime!
}
